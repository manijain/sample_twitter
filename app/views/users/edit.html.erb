<% provide(:title, "Edit user") %>
<h1 id="right-margin">Update your profile</h1>

<div class="row">
	<div class="span8">
		<div class="user-signin-img img-rounded">
  		</div>
	</div>
	<div class="span4 top" >
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= render 'fields', f: f %>
		<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails", target="_blank">change</a>
	</div>
</div> 	