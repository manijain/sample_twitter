<% provide(:title, 'Sign up') %>
<h1 id="right-margin">Sign Up</h1>
<h2 id="right-margin">Itâ€™s free and always will be.</h2>
<h2 id="left-margin"> you can connect with your friend by easy register.</h2>
<div class= "row">
   <div class= "span8">
     <div class= "class-img">
     </div> 	
   </div>
   <div class= "span4">
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation %>
		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>